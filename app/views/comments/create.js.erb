<%if !@comment.id.nil?%>
  $("#micropost-<%= @micropost.id%> .comments").append($(`<%= render @comment%>`)); 
  $("#micropost-<%= @micropost.id%> textarea").val('');
  $("#micropost-<%= @micropost.id%> #comment_picture").val('');
  $("#micropost-<%= @micropost.id%> #comment-count").empty();
  $("#micropost-<%= @micropost.id%> #comment-count").append(<%= @micropost.comments.count%> + " bình luận")
<% end %>
